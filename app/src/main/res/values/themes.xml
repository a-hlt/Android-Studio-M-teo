<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Teophe" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/accent_blue</item>
        <item name="colorOnPrimary">@color/dark_background</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorSurface">@color/dark_surface_1</item>
        <item name="colorOnBackground">@color/text_primary_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>

        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>

        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.App.Button.Outlined</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        <item name="cardViewStyle">@style/Widget.App.CardView</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/dark_background</item>
        <item name="backgroundTint">@color/accent_blue</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <style name="Widget.App.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="strokeColor">@color/dark_surface_2</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_secondary_dark</item>
        <item name="hintTextColor">@color/text_secondary_dark</item>
    </style>

    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/dark_surface_1</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">16dp</item>
    </style>
</resources>